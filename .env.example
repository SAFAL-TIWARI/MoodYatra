# Environment Configuration for MoodYatra

# Server Configuration
NODE_ENV=development
PORT=3000

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
# Open Source Map Services
WIKIPEDIA_API_URL=https://en.wikipedia.org/api/rest_v1
NOMINATIM_API_URL=https://nominatim.openstreetmap.org
OPENTRIPMAP_API_KEY=your_opentripmap_api_key_here

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Database
DATABASE_PATH=./backend/MoodYatra.db

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=10

# CORS Origins (Production)
CORS_ORIGINS=https://MoodYatra.ai,https://www.MoodYatra.ai

# File Upload Limits
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log